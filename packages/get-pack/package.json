{
  "name": "@khulnasoft/get-pkg",
  "type": "module",
  "private": "true",
  "version": "0.4.1",
  "packageManager": "pnpm@9.9.0",
  "description": "Install package programmatically.",
  "author": "Md Sulaiman <dev.sulaiman@icloud.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/khulnasoft",
  "homepage": "https://github.com/khulnasoft/pkg#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khulnasoft/pkg.git"
  },
  "bugs": {
    "url": "https://github.com/khulnasoft/pkg/issues"
  },
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "nr build",
    "dev": "nr build --watch",
    "start": "esno src/index.ts",
    "build": "tsup src/index.ts --format cjs,esm --dts --no-splitting",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "lint": "eslint ."
  },
  "dependencies": {
    "package-manager-detector": "^0.2.0",
    "tinyexec": "^0.3.0"
  },
  "devDependencies": {
    "@khulnasoft/eslint-config": "workspace:*",
    "@khulnasoft/ni": "^0.0.1",
    "@types/node": "^22.5.0",
    "bumpp": "^9.5.2",
    "eslint": "^9.9.1",
    "esno": "^4.7.0",
    "publint": "^0.2.10",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  }
}
